<%- include('include/_header.ejs') %>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All user</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update user</h2>
        </div>

        <form id="update_user" method="POST">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="name" value="<%= user.name %>">
        
                </div>
        
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="<%= user.email %>">
                    
                </div>
        
                <div class="form-group">
                    <label for="Gender" class="text-light">Gender</label>
                    <div class="radio inline">
                        <input type="radio" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
                        <label for="gender" class="text-light">Male</label>
                    </div>
        
                    <div class="radio inline">
                        <input type="radio" name="gender" value="Female" <%= user.gender == 'Female' ? 'checked' : '' %>>
                        <label for="gender" class="text-light">Female</label>
                    </div>
        
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                    
                    
                </div>
        
            </div>
        </form>

    </div>
</main>

<%- include('include/_footer.ejs') %>